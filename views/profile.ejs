
<%- include('header.ejs')%>
<style>
    .container1 {
      color: black;
      font-size: 50px;
      margin: 90px;
      text-align: center;
      padding: 130px;
      background-image: url(https://www.georgetown.edu/wp-content/uploads/2019/09/20180606_Neighborhood_ColorfulHouses-4790-3000x1688-c--light-default.jpg);

      height: 100%;
    }

</style>
  <div class="container1">
<div class="container shadow bg-white mt-5 mb-5">
    <div class="row">
      <div class="col-md-4">

                  <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <img
                      class="rounded-circle"
                      src="<%= image.url%>"
                      width="150px" height="150px"
                    /><span class="font-weight-bold"><%= d.name %></span
                    ><span class="text-black-50"><%= d._id %></span><span></span>
                  </div>
                </div>
                <div class="col-md-8">
                  <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                      
                    <h1 class="new">Update Profile</h1>

    
                      </div>
                    </div>
                    <div class="row mt-2">
                      <div class="col-md-6">
                        <input
                          type="text"
                          class="form-control"
                          placeholder="name"
                          name ="username"
                          value="<%= n %>"
                        />
                      </div>
                      <div class="col-md-6">
                        <input
                          type="text"
                          class="form-control"
                          value="<%= e %>"
                          placeholder=""
                          readonly
                        />
                      </div>
                    </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                  
                  <div class="mt-5 text-right"><button class="btn btn-primary profile-button" data-bs-toggle="modal"
                    data-bs-target="#profilemodal" type="button">Edit Profile</button></div>
                    <div class="mt-5 text-right"><button class="btn btn-primary profile-button" data-bs-toggle="modal"
                      data-bs-target="#passmodal" type="button">Change Password</button></div>
                </div>
                
            </div>
     
        </div>
    </div>
</div>
</div>


<%- include('footer.ejs')%>
</div>


<!-- passModal -->
<div
  class="modal fade"
  id="passmodal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Update Password</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form method="post" action="/change_password" enctype="multipart/form-data">
          <div class="mb-3">
            <input type="text" name="oldpassword" type="form-control" class="w-100" placeholder="Enter Your Current Password"/>
          </div>

          <div class="mb-3">
            <input type="text" name="newpassword" type="form-control" class="w-100" placeholder="New Password" />
          </div>

          <div class="mb-3">
            <input type="text" name="cpassword" type="form-control" class="w-100" placeholder="Confirm Password"/>
          </div>

          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button
              type="submit"
              name="submit"
              value="submit"
              class="btn btn-primary"
            >
              Save changes
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- profileModal -->
<div
  class="modal fade"
  id="profilemodal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Update Profile</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form method="post" action="/profile_update" enctype="multipart/form-data">
          <div class="mb-3">
            <label>Name:</label><br />
            <input type="text" name="name" value=" <%=n %>" type="form-control" class="w-100" />
          </div>

          <div class="mb-3">
            <label>Email:</label><br />
            <input
              type="email"
              name="email"
              type="form-control"
              value="<%=e%>"
              class="w-100"
            />
          </div>


          <div class="d-flex align-items-center justify-content-between">
         
            <img class="rounded-circle  border" src="<%= image.url%>" width="100" height="100">
            <div class="form-group mb-4">
            <input
              type="file"
              name="image"
              class="form-control form-control-lg"
            />
        </div>
          </div>
  
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button
              type="submit"
              name="submit"
              value="submit"
              class="btn btn-primary"
            >
              Save changes
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>